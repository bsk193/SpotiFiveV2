<center>
    <h1>SpotiFive - FXServer Spotify Implementation</h1>
    <br>
    <div style="width:30%;">
        <form action="/spotify/auth" method="GET">
            {{#if message}}
            {{#if success}}
            <div class="alert alert-success" role="alert">
                {{message}}
            </div>
            {{else}}
            <div class="alert alert-danger" role="alert">
                {{message}}
            </div>
            {{/if}}
            {{/if}}
            <div class="form-group row">
                <label for="text" class="col-4 col-form-label">SteamID64 (decimal)</label>
                <div class="col-8">
                    <div class="input-group">
                        <input id="text" name="steam" placeholder="eg.76561198017260467" type="text" class="form-control here"
                            aria-describedby="textHelpBlock" required="required">
                    </div>
                    <span id="textHelpBlock" class="form-text text-muted">you can find your SteamID64 <a href="https://steamid.io">here</a></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-4"></label>
                <div class="col-8">
                    <label class="custom-control custom-checkbox" style="margin-left: -60%">
                        <input name="privacy" type="checkbox" class="checkbox-custom checkbox-inline" value="privacy"
                            aria-describedby="privacyHelpBlock" required="required" >
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">I agree to the privacy policy.</span>
                    </label>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-2 col-8">
                    <button name="submit" type="submit" class="btn btn-primary" style="width:80%;height:10%; font-size:350%"><i class="fab fa-spotify"></i>  Link</button>
                </div>
            </div>
        </form>
    </div>
</center>